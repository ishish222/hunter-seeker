#responder=/home/ish/responder.py
#responder=/home/hs1/hs2-current-deploy/host-tools/client/responder.py
responder=/home/hs1/hs2-current-deploy/host-tools/client/dnsmasq 
#responder=/home/ish/projects/2016-12-11-dnsmasq/dnsmasq/src/dnsmasq
config=/home/hs1/hs2-current-deploy/host-tools/client/dnsmasq.conf
#config=/etc/dnsmasq.conf

start() {
    cp /etc/resolv.conf /etc/resolv.conf.2
    echo "nameserver 127.0.0.1" > /etc/resolv.conf
    cat /etc/resolv.conf.2 >> /etc/resolv.conf
    $responder -C $config &
}

stop() {
    mypid=$(cat /var/run/dnsmasq.pid)
    kill $mypid
    echo "Killed $mypid"
    cp /etc/resolv.conf.2 /etc/resolv.conf
}

